{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "baseUrl": ".", // This must be specified if "paths" is.
    "paths": {
      "~/*": ["./*"] // This mapping is relative to "baseUrl"
    },
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "ES5",
    "outDir": "./ts-built",
    "rootDir": "./src",
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "__tests__",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "index.youi.js",
    "rn-cli.config.js",
    "scripts",
    "youi/thirdparty",
    "youi/build",
    "youi/Resources"
  ]
}
